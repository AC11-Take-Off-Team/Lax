<h1>所有頻道</h1>


<%= link_to "創建頻道" ,new_channel_path %>

<%= render 'channels/search_form.html.erb' %>


<section class="section">
  <div class="container">
    <% @channel.each do |channel| %>
      <div class="card">
        <div class="card-content">
          <div class="media">
            <div class="media-content">
              <p class="title is-4"> <%= link_to channel.title, channel %></p>
            </div>
          <div>
          <div class="content">
            <%= channel.description %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
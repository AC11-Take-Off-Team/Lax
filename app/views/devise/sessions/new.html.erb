<section class="flex items-center justify-center min-h-full px-4 py-12 sm:px-6 lg:px-8">
    <div class="w-full max-w-md px-10 py-12 mx-auto space-y-8 -space-y-px rounded-md shadow-2xl">
        <div cless="title">
            <h2 class="mt-6 text-3xl font-bold tracking-tight text-center text-gray-900 ">登入至 Lax</h2>
        </div>
        <br/>
        <div class="flex justify-center mt-8 space-y-6">
            <button class="flex items-center justify-center w-full h-12 px-4 text-gray-600 transition-all border border-gray-300 rounded-md hover:bg-gray-50">
                <svg class="mr-auto" width="18" height="18" viewBox="0 0 18 18"><path d="M17.64,9.20454545 C17.64,8.56636364 17.5827273,7.95272727 17.4763636,7.36363636 L9,7.36363636 L9,10.845 L13.8436364,10.845 C13.635,11.97 13.0009091,12.9231818 12.0477273,13.5613636 L12.0477273,15.8195455 L14.9563636,15.8195455 C16.6581818,14.2527273 17.64,11.9454545 17.64,9.20454545 L17.64,9.20454545 Z" fill="#4285F4"></path><path d="M9,18 C11.43,18 13.4672727,17.1940909 14.9563636,15.8195455 L12.0477273,13.5613636 C11.2418182,14.1013636 10.2109091,14.4204545 9,14.4204545 C6.65590909,14.4204545 4.67181818,12.8372727 3.96409091,10.71 L0.957272727,10.71 L0.957272727,13.0418182 C2.43818182,15.9831818 5.48181818,18 9,18 L9,18 Z" fill="#34A853"></path><path d="M3.96409091,10.71 C3.78409091,10.17 3.68181818,9.59318182 3.68181818,9 C3.68181818,8.40681818 3.78409091,7.83 3.96409091,7.29 L3.96409091,4.95818182 L0.957272727,4.95818182 C0.347727273,6.17318182 0,7.54772727 0,9 C0,10.4522727 0.347727273,11.8268182 0.957272727,13.0418182 L3.96409091,10.71 L3.96409091,10.71 Z" fill="#FBBC05"></path><path d="M9,3.57954545 C10.3213636,3.57954545 11.5077273,4.03363636 12.4404545,4.92545455 L15.0218182,2.34409091 C13.4631818,0.891818182 11.4259091,0 9,0 C5.48181818,0 2.43818182,2.01681818 0.957272727,4.95818182 L3.96409091,7.29 C4.67181818,5.16272727 6.65590909,3.57954545 9,3.57954545 L9,3.57954545 Z" fill="#EA4335"></path></svg>
                <span class="mr-auto"><%= link_to "繼續使用 Google ", user_google_oauth2_omniauth_authorize_url, method: :post %></span>
            </button>
        </div>
        <div class="flex justify-center border-b border-gray-200">
            <span class="relative px-4 text-gray-300 bg-white top-3">or</span>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="flex flex-col mt-6 text-sm text-gray-500">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"name@company.com",class:"mt-2 h-9 border border-gray-300 rounded outline-none px-3 text-black focus:border-gray-400" %>
            </div>

            <div class="flex flex-col mt-6 text-sm text-gray-500">
                <%= f.label :password %>
                <%= f.password_field :password, autocomplete: "new-password",placeholder:"長度至少6個字元",class:"mt-2 h-9 border border-gray-300 rounded outline-none px-3 text-black focus:border-gray-400"%>
            </div>

            <button class="flex items-center w-full px-4 mt-8 transition-all border rounded-md h-9 bg-momo hover:bg-kohbai">
                <%= f.submit "登入",class:"text-sm text-white mx-auto bg-transparent"%>
            </button>
            <div class="flex justify-center mt-6">
                <%= link_to "忘記密碼?", new_password_path(resource_name), class:"link-hover text-sm text-momo hover:text-kohbai" %>
            </div>    
            <div class="flex justify-center mt-6">
                <p class="text-sm text-gray-500">沒有帳戶嗎？</p>
                <%= link_to "註冊", new_registration_path(resource_name), class:"link-hover text-sm text-momo hover:text-kohbai" %>
            </div>
        <% end %>
    </div>
</section>

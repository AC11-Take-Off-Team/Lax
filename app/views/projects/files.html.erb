<header class="h-[6.188rem] flex px-6 items-center justify-between border-b border-gray-200 overflow-y-auto">
  <h1 class="text-2xl bold"><%= @project.title %></h1>
  <div class="flex items-center">
    <%= render "shared/header",project: @project %>
  </div>
</header>
<section class="m-10 ">
  <%= form_for(@project) do |form| %>
    <div class="mt-16 field">
      <%= form.label :files, '檔案上傳：' %>
      <%= form.file_field :files, multiple: true %> 
      <button class="flex items-center px-4 mt-2 transition-all border rounded-md h-9 bg-momo hover:bg-kohbai">
        <%= form.submit "上傳",class:"text-sm text-white mx-auto bg-transparent"%>
      </button>
    </div>
  <% end %>
  <div class="mt-10">
    <% if @project.files.attached? %>
      <% @project.files.each do |file| %>
          <div>
            <%= file.filename%>
            <%= link_to "｜下載", file, class:"inline ml-3"%>
          </div>
      <% end %>
    <% else %>
      <h2 class="text-3xl">目前沒有任何檔案</h2>
    <% end %>
  </div>
</section>
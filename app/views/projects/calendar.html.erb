<main class="flex-1 bg-white overflow-auto">
  <header class="h-[6.188rem] flex px-6 items-center justify-between border-b border-gray-200">
    <div class="w-full flex items-center justify-between">
      <h1 class="text-xl font-semibold py-4">行事曆</h1>
      <%= render "shared/header.html.erb" %>
    </div>
  </header>
    <div class="h-10 bg-white flex items-center text-xs justify-between shadow px-6">
      <div data-controller="calendar-switch" class="flex">
        <button data-action="click->calendar-switch#switchToMonth" class="h-7 w-20 text-icon flex hover:bg-hover hover:text-gray-700 group-focus-within:bg-hover group-focus-within:text-gray-700 px-2 rounded transition-all items-center">
          month
          <div id="container" class="w-2/5"></div>
        </button>
        <button data-action="click->calendar-switch#switchToWeek" class="h-7 w-20 text-icon flex hover:bg-hover hover:text-gray-700 group-focus-within:bg-hover group-focus-within:text-gray-700 px-2 rounded transition-all items-center">
          week
          <div id="container" class="w-2/5"></div>
        </button>
        <button data-action="click->calendar-switch#switchToDay" class="h-7 w-20 text-icon flex hover:bg-hover hover:text-gray-700 group-focus-within:bg-hover group-focus-within:text-gray-700 px-2 rounded transition-all items-center">
          Day
          <div id="container" class="w-2/5"></div>
        </button>
      </div>
      <div class="relative group z-20">
        <button class="h-7 text-icon flex hover:bg-hover hover:text-gray-700 group-focus-within:bg-hover group-focus-within:text-gray-700 px-2 rounded transition-all items-center">
          <svg class="fill-current mr-1" height="16" focusable="false" viewBox="0 0 32 32">
            <path d="M16,13c1.7,0,3,1.3,3,3s-1.3,3-3,3s-3-1.3-3-3S14.3,13,16,13z M3,13c1.7,0,3,1.3,3,3s-1.3,3-3,3s-3-1.3-3-3S1.3,13,3,13z M29,13c1.7,0,3,1.3,3,3s-1.3,3-3,3s-3-1.3-3-3S27.3,13,29,13z"/>
          </svg>
        </button>
        <nav class="absolute top-full z-10 right-0 translate-y-1 shadow-box rounded bg-white py-1 w-[11.563rem] opacity-0 invisible transition-all group-focus-within:opacity-100 group-focus-within:visible">
          <a href="#" class="h-9 flex items-center px-2 font-medium text-xs transition-all text-gray-800 hover:bg-menu-hover">
            Save layout as default
          </a>
          <a href="#" class="h-9 flex items-center px-2 font-medium text-xs transition-all text-gray-800 hover:bg-menu-hover">
            Search this project
          </a>
        </nav>
      </div>
    </nav>
  </div>  
  <section>
    <div data-controller="calendar" data-project-id="<%= @project.id %>" data-action="switchToMonth@window->calendar#switchToMonth switchToWeek@window->calendar#switchToWeek switchToDay@window->calendar#switchToDay">
      <div id="calendar" style="height: 800px"></div>
    </div>
  </section>
</main>

<main class="flex-1 overflow-auto bg-white">
  <header class="h-[6.188rem] flex px-6 items-center justify-between border-b border-gray-200">
    <h1 class="text-2xl bold"><%= @project.title %></h1>
    <div class="flex items-center">
      <%= render "shared/header",project: @project %>
    </div>
  </header>
    <div class="flex items-center justify-between h-10 px-6 text-xs bg-white shadow">
      <div data-controller="calendar-switch" class="flex text-center">
        <button data-action="click->calendar-switch#switchToMonth" class=" items-center w-20 px-2 transition-all rounded h-7 text-icon hover:bg-hover hover:text-gray-700 group-focus-within:bg-hover group-focus-within:text-gray-700">
          month
          <div id="container" class="w-2/5"></div>
        </button>
        <button data-action="click->calendar-switch#switchToWeek" class=" items-center w-20 px-2 transition-all rounded h-7 text-icon text-center hover:bg-hover hover:text-gray-700 group-focus-within:bg-hover group-focus-within:text-gray-700">
          week
          <div id="container" class="w-2/5"></div>
        </button>
        <button data-action="click->calendar-switch#switchToDay" class=" items-center w-20 px-2 transition-all rounded h-7 text-icon hover:bg-hover hover:text-gray-700 group-focus-within:bg-hover group-focus-within:text-gray-700">
          Day
          <div id="container" class="w-2/5"></div>
        </button>
      </div>
    </nav>
  </div>  
  <section>
    <div data-controller="calendar" data-project-id="<%= @project.id %>" data-action="switchToMonth@window->calendar#switchToMonth switchToWeek@window->calendar#switchToWeek switchToDay@window->calendar#switchToDay">
      <div id="calendar" style="height: 800px"></div>
    </div>
  </section>
</main>

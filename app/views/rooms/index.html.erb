<section class="max-w-full mx-auto ">
<p id="notice"><%= notice %></p>


<%if @room.present? %>
<h3 class="text-grey-darkest mb-1 font-extrabold p-6"><p><%= "Current group: #{@room.name}"%></p></h3>
    
       <div class="px-6 py-4 flex-1 overflow-y-scroll" style="height: 400px">
       <div id = "messages">
    <% @room.messages.each do |message| %>
        <%= render 'messages/message', message: message %>          
    <%end %>
    </div>
    </div>
    <%= render 'messages/form', message: Message.new, room: @room %>

    
<%end%> 


</section>
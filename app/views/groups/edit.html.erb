<section  class="w-full h-full fixed left-0 top-0 mx-auto flex justify-center items-center bg-black bg-opacity-30">
  <div class="w-1/3 h-3/5 p-2.5 bg-white rounded-3xl">
    <h3 class="my-6 text-3xl">編輯說明</h3>
    <%= form_for @group do |form| %>
      名稱：
      <div>
        <%= form.text_field :title ,:class=>"my-2 border-2 rounded text-2xl" %>
      </div>
      描述:
      <div>
        <%= form.text_field :description, :class=>"my-2 border-2 rounded text-2xl " %>
      </div>
      <button>
        <%= form.submit "確認" ,:class=>"mb-2 mt-6 bg-blue-500 hover:bg-blue-700 text-white rounded py-2 px-4" %>
      </button>
    <% end %>
  </div>
</section>
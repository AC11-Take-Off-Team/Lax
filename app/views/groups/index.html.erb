<section class="w-5/6 max-w-full mx-auto">
  <div class="mx-auto max-w-7xl ">
    <div class="flex items-center justify-between " >
      <div>
        <h2 class="p-3 my-2 text-xl">所有頻道</h2>
      </div>
      <div>
        <h3><%= link_to "創建頻道",new_group_path ,:class=>"max-w-full px-6 py-3 text-white transition duration-300 border-b-4 rounded-lg bg-kohbai hover:bg-green-700" %></h3>
      </div>
    </div>
    <div class="mx-auto ">
      <div>
        <%= render 'layouts/shared/search_form'%>
      </div>
<div class="overflow-y-auto h-96">
      <% @group.each do |group| %>
        <div class="p-2 my-2 mt-3 border-b-2">
          <div class="flex justify-between align-center">
            <div>
              <h3 class="text-xl text-green-700"><%= link_to group.title, group %></h3>
              <div class="mb-2 text-sm">
                <div><%= group.users.count %>個成員</div>
              </div>
            </div>
            <% if current_user.join?(group) %>
              <button><%= link_to "退出" , quit_group_path(group),method: "delete" ,:class=>"px-6 py-3 text-white transition duration-300 bg-gray-400 border-b-4 rounded-lg hover:bg-green-700"%></button>
            <% else %>
              <button><%= link_to "加入" , join_group_path(group),method: "post",:class=>"px-6 py-3 text-white transition duration-300 border-b-4 rounded-lg bg-kohbai hover:bg-green-700" %></button>
            <% end %>
          </div>
         </div>
        </div>
      <% end %>
    </div>
  </div>
</section>











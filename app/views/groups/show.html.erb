<section class="flex flex-wrap">
  <h3 class="flex-none hidden w-24 p-6 bg-indigo-darkest text-purple-lighter md:block"><%= @group.title %><h3>
<div  class=" h-96">
  <div class="h-4/5 ">
    <div class="border-b-2 ">
      <h3 class="mb-3 ml-10 text-5xl"><%= @group.title %><h3>
    </div>
  </div>
  <% if current_user.join?(@group) %>
    <div class="my-6 mt-8 ml-10 text-2xl font-semibold text-blue-400"><%= @group.description %><%= link_to "編輯說明" , edit_group_path(@group) %></div>
  <% else %>
    <%= link_to "詳情" , content_group_path(@group.id),method:"post" %>
    <%= link_to "加入頻道" , join_group_path(@group),method: "post" %>
    <%= link_to "返回所有頻道" , groups_path %>
  <% end %>
</section>

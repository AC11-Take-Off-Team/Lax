<div  class=" h-96 ">
  <div class="h-4/5 ">
    <div class="border-b-2 ">
      <h3 class="text-5xl ml-10 mb-3"><%= @group.title %><h3>
    </div>
  </div>
  <% if current_user.join?(@group) %>
    <div class="text-blue-400 ml-10 mt-8"><%= @group.description %><%= link_to "編輯說明" , edit_group_path(@group) %></div>
    <div class="border-b-2">
      <div class=" bg-gray-200  h-40 flex  " ></div>
    </div>
  <% else %>
    <div class=" bg-gray-200  h-full flex flex-col justify-center items-center  " >
      <div>
        <button class="mb-2 bg-white hover:bg-gray-100 py-2 px-4 rounded shadow "><%= link_to "詳情" , content_group_path(@group.id),method:"post" %></button>
        <button class="mb-2 bg-blue-500 hover:bg-blue-700 text-white rounded py-2 px-4 "><%= link_to "加入頻道" , join_group_path(@group),method: "post" %></button>
      </div>
      <div class="text-gray-400 mt-4"><%= link_to "返回所有頻道" , groups_path %></div>
    </div>
  <% end %>
</div>



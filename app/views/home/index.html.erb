<section class="relative m-auto">
  <h1 class="text-xl font-extrabold ml-4 mt-8">首頁</h1>
  <span class="text-lg block text-center mb-4"><%= Time.now.strftime("%Y年%m月%d日") %></span>
  <% if current_user.username %>
    <h2 class="text-center text-4xl font-extrabold mb-8">Hi, <%= current_user.username %></h2>
  <% else %>
    <h2 class="text-center text-4xl font-extrabold mb-8">Hi, <%= current_user.email %></h2>
  <% end %>
  
  <div class="w-3/5 mr-auto ml-auto mb-8 flex justify-center border	border-gray-500 border-solid rounded-full p-4 text-gray-700">
    <div class="">
      <button class="flex">
        <img src="https://cdn-icons-png.flaticon.com/512/2773/2773319.png" class="w-6 mr-2">
        <%= link_to '我的行事曆', calendar_project_path(@first_project.id) %>
      </button>
    </div>
    <span class="mr-4 ml-4">|</span>
    <div class="flex">
      <img src="https://cdn-icons-png.flaticon.com/512/7993/7993784.png" class="w-6 mr-2">
      <%= @projects.count %> 個進行中的專案
    </div>
    <span class="mr-4 ml-4">|</span>
    <div class="flex">
      <img src="https://cdn-icons-png.flaticon.com/512/3128/3128528.png" class="w-6 mr-2">
      <p><%= @groups.count %> 個頻道</p>
    </div>
  </div>
  
  <div class="flex justify-evenly mb-8 gap-12">
    <div class="border border-gray-500 border-solid rounded-md p-4 text-gray-700 w-6/12 h-96 ml-8">
      <div class="flex mb-4 border-b border-gray-400">
        <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" class="h-20 ">
        <div class="ml-4 mt-4">
          <p class="text-xl mb-2">我的優先任務</p>
          <div class="mb-4 flex-row" data-controller="index-task">
            <button data-action="click->index-task#showTodoList" class="text-icon border-b-2 border-transparent hover:text-gray-700 text-base font-semibold pb-2" data-index-task-target="todoBtn">待辦事項</button>
            <button data-action="click->index-task#showDoingList" class="text-icon border-b-2 border-transparent hover:text-gray-700 text-base font-semibold pb-2 ml-4" data-index-task-target="doingBtn">進行中</button>
            <button data-action="click->index-task#showDoneList" class="text-icon border-b-2 border-transparent hover:text-gray-700 text-base font-semibold pb-2 ml-4" data-index-task-target="doneBtn">已完成</button>
          </div>
        </div>
      </div>
      <div>
        <div class="flex pb-4 pl-2 mb-4 border-b border-gray-400">
          <img src="https://cdn-icons-png.flaticon.com/512/709/709510.png" class="h-4 mr-2 mt-auto mb-auto opacity-30	">
          <input type="text" class="focus: outline-none" data-controller="index-task-create" data-project-id="<%= @first_project[:id] %>" data-action="keypress->index-task-create#createTask" data-index-task-create-target="createTask" placeholder="為第一個專案建立任務"></input>
        </div>
        <div data-controller="index-task-list">
          <div data-index-task-list-target="undo" data-action="showTodo@window->index-task-list#showTodo" class="h-36 hidden overflow-auto">
            <% @undo_list.each do |task| %>
              <div class="flex pb-4 pl-2 mb-4 border-b border-gray-400">
                <img src="https://cdn-icons-png.flaticon.com/512/709/709510.png" class="h-4 mr-2 mt-auto mb-auto">
                <p><%= link_to task.title, task_path(task.id) %></p>
              </div>
            <% end %>
          </div>
          <div data-index-task-list-target="doing" data-action="showDoing@window->index-task-list#showDoing" class="hidden h-36 overflow-auto">
            <% @doing_list.each do |task| %>
              <div class="flex pb-4 pl-2 mb-4 border-b border-gray-400">
                <img src="https://cdn-icons-png.flaticon.com/512/709/709510.png" class="h-4 mr-2 mt-auto mb-auto">
                <p><%= link_to task.title, task_path(task.id) %></p>
              </div>
            <% end %>
          </div>
          <div data-index-task-list-target="done" data-action="showDone@window->index-task-list#showDone" class="hidden h-36 overflow-auto">
            <% @done_list.each do |task| %>
              <div class="flex pb-4 pl-2 mb-4 border-b border-gray-400">
                <img src="https://cdn-icons-png.flaticon.com/512/709/709510.png" class="h-4 mr-2 mt-auto mb-auto">
                <p><%= link_to task.title, task_path(task.id) %></p>
              </div>
            <% end %>
          </div>
          <div data-index-task-list-target="example">
            <div class="flex pb-4 pl-2 mb-4 border-b border-gray-400">
              <img src="https://cdn-icons-png.flaticon.com/512/709/709510.png" class="h-4 mr-2 mt-auto mb-auto">
              <p>規劃檔期活動</p>
            </div>
            <div class="flex pb-4 pl-2 border-b border-gray-400">
              <img src="https://cdn-icons-png.flaticon.com/512/709/709510.png" class="h-4 mr-2 mt-auto mb-auto">
              <p>完成海報設計</p>
          </div>
        </div>
      </div>
    </div>
  </div>
    
    <div data-controller="button-project" class="border border-gray-500 border-solid rounded-md p-4 text-gray-700 w-6/12 h-96 mr-8">
      <p class="text-xl mt-4 mb-6 pl-4">專案</p>
      <div data-controller="index-project">
        <button data-action="click->button-project#openProjectPopup" class="pl-8 mb-4 flex items-center">
          <svg width="10%" height="10%" focusable="false" viewBox="0 0 120 120">
            <path d="M99,119H21c-11,0-20-9-20-20V21C1,10,10,1,21,1h78c11,0,20,9,20,20v78C119,110,110,119,99,119z" stroke="#9ca6af" stroke-width="3" stroke-dasharray="10.0605,5.0302" fill="transparent"/>
